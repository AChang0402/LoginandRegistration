@model User
<h1 class="tac">Register</h1>
<form asp-action="Register" asp-controller="Home" method="post">
    <div>
        <div class="flex jc-end gap-20 mt-20">
            <label asp-for="FirstName" class="asc"></label>
            <input asp-for="FirstName" class="fw-normal">
        </div>
        <div class="tae">
            <span asp-validation-for="FirstName" class="red fw-normal position-relative right-10"></span>
        </div>
    </div>
    <div>
        <div class="flex jc-end gap-20 mt-20">
            <label asp-for="LastName" class="asc"></label>
            <input asp-for="LastName" class="fw-normal">
        </div>
        <div class="tae">
            <span asp-validation-for="LastName" class="red fw-normal position-relative right-10"></span>
        </div>
    </div>
    <div>
        <div class="flex jc-end gap-20 mt-20">
            <label asp-for="Email" class="asc"></label>
            <input asp-for="Email" class="fw-normal">
        </div>
        <div class="tae">
            <span asp-validation-for="Email" class="red fw-normal position-relative right-10"></span>
        </div>
    </div>
    <div>
        <div class="flex jc-end gap-20 mt-20">
            <label asp-for="Password" class="asc"></label>
            <input asp-for="Password" class="fw-normal">
        </div>
        <div class="tae">
            <span asp-validation-for="Password" class="red fw-normal position-relative right-10"></span>
        </div>
    </div>
    <div>
        <div class="flex jc-end gap-20 mt-20">
            <label asp-for="PasswordConfirm" class="asc"></label>
            <input asp-for="PasswordConfirm" class="fw-normal">
        </div>
        <div class="tae">
            <span asp-validation-for="PasswordConfirm" class="red fw-normal position-relative right-10"></span>
        </div>
    </div>
    <div class="tae mt-20">
        <button>Register</button>
    </div>
</form>